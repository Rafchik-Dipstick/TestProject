<Window x:Class="Test_Task_New.Views.MainForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test_Task_New.Views"
        mc:Ignorable="d"
        Title="MainForm" Height="600" Width="1000">

    <Grid x:Name="MainRoot" Background="White" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Background="WhiteSmoke">
            <Button x:Name="DashboardBtn" Content="Dashboard" Height="50" Click="DashboardBtn_Click"></Button>
            <Button x:Name="SearchBtn" Content="Search" Height="50" Click="SearchBtn_Click"></Button>
        </StackPanel>
        <ContentControl x:Name="CC" Grid.Column="1"/>
    </Grid>
</Window>
