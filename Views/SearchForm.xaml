<UserControl x:Class="Test_Task_New.Views.SearchForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Test_Task_New.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid Background="White">

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>

            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Content="Current Currency" Margin="0,0,0,55"/>
            <Label Content="Current Price" Margin="0,0,0,55" Grid.Row="1"/>
            <Label Content="Volume" Margin="0,0,0,55" Grid.Row="2"/>
            <Label Content="Price Change" Margin="0,0,0,55" Grid.Row="3"/>
            <Label Content="CoinMarketCap Link" Margin="0,0,0,55" Grid.Row="4"/>
        </Grid>
    </Grid>
</UserControl>
